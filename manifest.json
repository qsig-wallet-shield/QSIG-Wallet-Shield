{
  "manifest_version": 3,
  "name": "QSIG Wallet Shield â€“ Quantum Security Research Tool",
  "description": "Experimental research tool that logs post-quantum signatures (ML-DSA/Dilithium) during wallet transactions.",
  "version": "6.0.1",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/dilithium.min.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}